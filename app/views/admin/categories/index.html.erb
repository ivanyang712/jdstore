
<h2> Category List </h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("New Category", new_admin_category_path, class: "btn btn-primary btn-sm") %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Category</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td>
          <%= category.id %>
        </td>
        <td>
          <%= category.name %>
        </td>
        <td>
          <%= link_to("Edit", edit_admin_category_path(category)) %>
          <%= link_to("Destroy", admin_category_path(category), method: :delete, data: { confirm: "You sure?" } ) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
