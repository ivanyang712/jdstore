<div class="container">
  <div class="row">
    <div class="header">
      <%= image_tag("slide1.jpg", class: "background-image") %>
      <%= render "products/menu" %>
    </div>

    <% @products.each do |product| %>
      <div class="col-xs-6 col-md-3 tc">
        <div class="thumbnail productList-item">
        <% link_to product_path(product) %>
          <% if product.photos.present? %>
            <%= link_to image_tag(product.photos[0].avatar.thumb.url),product_path(product) %>
          <% else %>
            <%= link_to image_tag("http://placehold.it/200x200&text=No Pic", class: "img-ts"), product_path(product) %>
          <% end %>
        <br>
        <%= link_to(product.title, product_path(product)) %>
        <br>
        <strong class="col-red">ï¿¥ <%= product.price %></strong></p>
      </div>
    </div>
    <% end %>

  </div>
</div>
