<div class="row ml50">
    <div class="col-xs-6 col-md-3">
            <%= link_to product_path(product) do %>
              <% if product.photos.present? %>
                <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/418x418&text=No Pic") %>
              <% end %>
            <% end %>
    </div>
    <div class="col-xs-6 col-md-3">
          <p>￥<%= product.price %></p>
          <p>
            <%= link_to product_path(product) do %>
               <%= product.title %>
            <% end %>
          </p>
          <p class="productList-item-desc mt5 f12"><%= product.description %></p>
          <% if product.quantity > 0 %>
            <%= link_to add_to_cart_product_path(product), :method => :post, :remote => true do %>
              <i class="fa fa-shopping-cart col-red"></i>
            <% end %>
          <% end %>
          <% if product.quantity <= 0 %>
            <p class="productList-item-sellout f20 tc">已售完</p>
          <% end %>
          <% if !product.users.include?(current_user) %>
            <%= link_to("",add_to_favorite_product_path(product),method: :post, class: "fa fa-heart") %>
          <% else %>
            <%= link_to("", quit_favorite_product_path(product),method: :post,  class: "fa fa-heart", style: "color:red;") %>
          <% end %>
      </div>
</div>
